   </ITEM>
   <ITEM CMPNAME="DO_EXISTS" EXPOSURE="1" STATE="1" EDITORDER="8 " MTDNEWEXC="X">
    <TEXTS>
     <ITEM LANGU="E" DESCRIPT="Do devclass exists"/>
    </TEXTS>
    <PARAMETERS>
     <ITEM SCONAME="DATA" CMPTYPE="1" EDITORDER="1 " PARPASSTYP="1" TYPTYPE="1" TYPE="TD_DEVCLASS"/>
     <ITEM SCONAME="RESULT" CMPTYPE="1" EDITORDER="2 " PARDECLTYP="3" TYPTYPE="1" TYPE="TD_EXISTS"/>
    </PARAMETERS>
    <EXCEPTIONS>
     <ITEM SCONAME="ZAPLINK_CX_OPT_DEVCLASS" LANGU="E" EDITORDER="1 ">
      <TEXTS>
       <ITEM LANGU="E" DESCRIPT="ZAPlink Exception for Options"/>
      </TEXTS>
     </ITEM>
    </EXCEPTIONS>
    <SOURCE>`

  result = abap_false.
  CHECK NOT data IS INITIAL.

  CALL FUNCTION &apos;TRINT_DEVCLASS_GET&apos;
    EXPORTING
      iv_devclass              = data
*      IV_LANGU                 = SY-LANGU
*      IV_WITH_LAYER            = &apos;X&apos;
*      IV_WITH_TEXT             = &apos; &apos;
*      IV_USE_MEMORY            = &apos; &apos;
*    IMPORTING
*      ES_TDEVC                 =
    EXCEPTIONS
      devclass_not_found       = 1
      OTHERS                   = 2.
  IF sy-subrc = 0.
    result = abap_true.
  ELSEIF sy-subrc &lt;&gt; 1.
    RAISE EXCEPTION TYPE zaplink_cx_opt_devclass
          EXPORTING textid = zaplink_cx_opt_devclass=&gt;missing_devclass
                  devclass = data.
  ENDIF.</SOURCE>
   </ITEM>
   <ITEM CMPNAME="GET_DEVCLASS" EXPOSURE="2" STATE="1" EDITORDER="4 " MTDNEWEXC="X">
    <TEXTS>
     <ITEM LANGU="E" DESCRIPT="DevClass : Getter"/>
    </TEXTS>
    <PARAMETERS>
     <ITEM SCONAME="RESULT" CMPTYPE="1" EDITORDER="1 " PARDECLTYP="3" TYPTYPE="1" TYPE="TD_DEVCLASS"/>
    </PARAMETERS>
    <EXCEPTIONS>
     <ITEM SCONAME="ZAPLINK_CX_OPT_DEVCLASS" LANGU="E" EDITORDER="1 ">
      <TEXTS>
       <ITEM LANGU="E" DESCRIPT="ZAPlink Exception for Options"/>
      </TEXTS>
     </ITEM>
    </EXCEPTIONS>
    <SOURCE>`
result = _devclass.</SOURCE>
   </ITEM>
   <ITEM CMPNAME="GET_EXISTING" EXPOSURE="1" STATE="1" EDITORDER="7 " MTDNEWEXC="X">
    <TEXTS>
     <ITEM LANGU="E" DESCRIPT="Get existing devclass"/>
    </TEXTS>
    <PARAMETERS>
     <ITEM SCONAME="COMPONENT" CMPTYPE="1" EDITORDER="1 " PARPASSTYP="1" TYPTYPE="1" TYPE="TO_COMPONENT">
      <TEXTS>
       <ITEM LANGU="E" DESCRIPT="Component in progress"/>
      </TEXTS>
     </ITEM>
     <ITEM SCONAME="RESULT" CMPTYPE="1" EDITORDER="2 " PARDECLTYP="3" TYPTYPE="1" TYPE="TD_DEVCLASS">
      <TEXTS>
       <ITEM LANGU="E" DESCRIPT="DevClass used for object"/>
      </TEXTS>
     </ITEM>
    </PARAMETERS>
    <EXCEPTIONS>
     <ITEM SCONAME="ZAPLINK_CX_OPT_DEVCLASS" LANGU="E" EDITORDER="1 ">
      <TEXTS>
       <ITEM LANGU="E" DESCRIPT="ZAPlink Exception for Options"/>
      </TEXTS>
     </ITEM>
    </EXCEPTIONS>
    <SOURCE>`
  DATA _name        TYPE tadir-obj_name.
  DATA _type        TYPE tadir-object.
  DATA _exists      TYPE saus_dpara-tadirexist.

  CHECK component IS BOUND.

  TRY.
      _type = component-&gt;get_type( ).
      _name = component-&gt;get_name( ).
    CATCH zaplink_cx INTO o_cx.
      mac_cascade_raise o_mycx o_cx.
  ENDTRY.

  CALL FUNCTION &apos;TRINT_TADIR_QUERY&apos;
    EXPORTING
      iv_pgmid           = &apos;R3TR&apos;
      iv_object          = _type
      iv_obj_name        = _name
    IMPORTING
*      EV_OBJECT          =
*      EV_SRCSYSTEM       =
      ev_devclass        = result
*      EV_AUTHOR          =
*      EV_GENFLAG         =
      ev_exist           = _exists.
  IF _exists IS INITIAL.
    CLEAR result.
  ENDIF.</SOURCE>
   </ITEM>
   <ITEM CMPNAME="GET_SUBSTITUTIONKIND" EXPOSURE="2" STATE="1" EDITORDER="2 " MTDNEWEXC="X">
    <TEXTS>
     <ITEM LANGU="E" DESCRIPT="Substitution Kind : Getter"/>
    </TEXTS>
    <PARAMETERS>
     <ITEM SCONAME="RESULT" CMPTYPE="1" EDITORDER="1 " PARDECLTYP="3" TYPTYPE="1" TYPE="TD_SUBSTITUTIONKIND">
